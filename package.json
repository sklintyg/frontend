{
  "name": "frontend",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "e2e"
    ]
  },
  "scripts": {
    "build": "turbo build",
    "lint": "eslint . -f checkstyle > lint-result.xml",
    "posttest:ci": "pnpm test:report && pnpm test:coverage",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "start:test": "turbo dev --concurrency=100% -- -m test",
    "start": "turbo dev --concurrency=100%",
    "test:ci": "turbo test:ci",
    "test:report": "jrm junit.xml \"packages/**/junit.xml\" \"apps/**/junit.xml\"",
    "test": "pnpm cross-env NODE_OPTIONS='--no-experimental-fetch' vitest",
    "typescript": "turbo typescript"
  },
  "devDependencies": {
    "@frontend/combine-coverage": "workspace:*",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/user-event": "^14.4.3",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-v8": "^0.34.3",
    "@vitest/ui": "^0.34.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^7.0.4",
    "junit-report-merger": "^2.2.2",
    "lint-staged": "^12.5.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "rollup": "^3.20.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-svg": "^2.0.0",
    "turbo": "^1.10.1",
    "typescript": "^5.0.4",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "ie 11"
  ],
  "pnpm": {
    "overrides": {
      "intl-messageformat": "10.3.5"
    }
  }
}
