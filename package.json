{
  "name": "frontend",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/babel-loader"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx -f checkstyle > lint-result.xml",
    "test": "jest",
    "merge-reports": "jrm combined.xml \"results/*.xml\""
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "@types/react-redux": "^7.1.9",
    "babel-plugin-styled-components": "^1.12.0",
    "enzyme-to-json": "^3.4.3",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "lerna": "^3.18.1",
    "prettier": "^1.18.2",
    "react-addons-test-utils": "^15.6.2",
    "react-app-rewired": "^2.1.3",
    "redux-devtools": "^3.5.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.1",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.157",
    "@types/node": "^12.12.47",
    "@types/react": "^16.9.41",
    "@types/react-datepicker": "^4.3.2",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.6",
    "@types/testing-library__jest-dom": "^5.9.4",
    "babel-plugin-styled-components": "^1.12.0",
    "customize-cra": "^0.8.0",
    "date-fns": "^2.16.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "filtrex": "^2.1.0",
    "http-proxy-middleware": "1.3.1",
    "inera-core-css": "git+https://bitbucket.org/ineraservices/inera-core-css.git#master",
    "jest": "26.6.0",
    "jest-junit": "^12.0.0",
    "jest-styled-components": "^7.0.4",
    "junit-report-merger": "^2.2.2",
    "node-sass": "4",
    "react": "^16.13.1",
    "react-datepicker": "^4.3.0",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "react-tooltip": "^4.2.21",
    "styled-components": "^5.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "packages/*/src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "prettier/react",
      "plugin:prettier/recommended"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "ie 11"
  ],
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
  }
}
