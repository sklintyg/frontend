{
  "name": "frontend",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start": "turbo dev",
    "test": "turbo test",
    "typescript": "turbo typescript",
    "build": "turbo build",
    "lint": "eslint . -f checkstyle > lint-result.xml",
    "merge-reports": "jrm combined.xml \"results/*.xml\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.34.0",
    "eslint-config-custom": "*",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "prettier": "^1.18.2",
    "turbo": "^1.7.4",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "ie 11"
  ],
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
  }
}
