{
  "name": "frontend",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "e2e"
    ]
  },
  "scripts": {
    "build": "pnpm --filter * build",
    "lint": "eslint . -f checkstyle > lint-result.xml",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "start:test": "turbo dev --concurrency=100% -- -m test",
    "start": "turbo dev --concurrency=100%",
    "test:ci": "turbo test:ci",
    "test": "pnpm cross-env NODE_OPTIONS='--no-experimental-fetch' TZ=UTC vitest",
    "typescript": "pnpm --filter * typescript"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@vitest/coverage-v8": "^0.34.3",
    "@vitest/ui": "^0.34.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "turbo": "^1.10.1",
    "typescript": "^5.0.4",
    "vitest": "^0.34.3"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "ie 11"
  ],
  "pnpm": {
    "overrides": {
      "intl-messageformat": "10.3.5"
    }
  }
}
