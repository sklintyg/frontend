{
  "name": "frontend",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "e2e"
    ]
  },
  "scripts": {
    "build": "turbo build",
    "lint": "eslint . -f checkstyle > lint-result.xml",
    "prepare": "husky install",
    "start": "turbo dev",
    "test:ci": "turbo test:ci",
    "posttest:ci": "yarn test:report && yarn test:coverage",
    "test:report": "jrm junit.xml \"packages/**/junit.xml\" \"apps/**/junit.xml\"",
    "test:coverage": "coverage",
    "test": "turbo test",
    "typescript": "turbo typescript"
  },
  "devDependencies": {
    "@frontend/combine-coverage": "*",
    "eslint": "^8.34.0",
    "eslint-config-custom": "*",
    "husky": "^7.0.4",
    "junit-report-merger": "^2.2.2",
    "lint-staged": "^12.5.0",
    "nyc": "^15.1.0",
    "prettier": "^1.18.2",
    "turbo": "^1.7.4",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "ie 11"
  ],
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
  },
  "dependencies": {}
}
