{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": false,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "components": ["./packages/components/src/index.ts"],
      "components/1177": ["./packages/components/src/theme/1177/index.ts"],
      "components/1177-pro": ["./packages/components/src/theme/1177-pro/index.ts"],
      "components/inera": ["./packages/components/src/theme/inera/index.ts"],
      "components/inera-admin": ["./packages/components/src/theme/inera-admin/index.ts"],
      "components/colors": ["./packages/components/src/theme/colors.ts"],
      "fake": ["./packages/fake/src/index.ts"],
      "utils": ["./packages/utils/src/index.ts"],
      "ids-react-ts": ["./packages/ids-react-ts/src/index.ts"]
    },
    "types": ["vitest/globals"]
  },
  "exclude": ["**/dist/**", "dist", "./app/*/dist/**", "./app/*/*.d.ts", "./app/*/*.d.cts"]
}
