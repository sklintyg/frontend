{
  "extends": "../../tsconfig.json",
  "exclude": ["dist", "coverage", "node_modules", "**/*stories*"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES5",
    "module": "ESNext",
    "declaration": false,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "@types/testing-library__jest-dom"],
    // Tell compiler to use React 17 dependencies.
    "paths": {
      "react": ["./node_modules/@types/react"]
    }
  }
}
