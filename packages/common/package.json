{
  "name": "@frontend/common",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/common.umd.js",
  "module": "./dist/common.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/common.es.js",
      "require": "./dist/common.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "vite build -w -m development",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "typescript": "tsc --noEmit",
    "index-list": "ctix create -p ./tsconfig.json"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "jest --bail --findRelatedTests"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "/src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "date-fns": "^2.16.1",
    "dompurify": "^2.3.6",
    "faker": "5.5.3",
    "filtrex": "^2.2.0",
    "focus-trap-react": "^8.8.1",
    "react-datepicker": "^4.10.0",
    "react-tooltip": "^4.2.21",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.1",
    "@types/dompurify": "^2.3.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/enzyme": "^3.10.5",
    "@types/faker": "^5.5.9",
    "@types/jest": "^26.0.22",
    "@types/node": "12.11.1",
    "@types/react-datepicker": "^4.3.2",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.26",
    "@vitejs/plugin-react": "^3.1.0",
    "ctix": "^1.8.2",
    "enzyme-to-json": "^3.4.3",
    "jest-junit": "^12.0.0",
    "jest": "26.6.0",
    "react-dom": "^17.0.2",
    "react": "^17.0.2",
    "ts-jest": "^26.5.4",
    "type-fest": "^1.4.0",
    "typescript": "^4.9.5",
    "vite-plugin-dts": "^1.7.2",
    "vite": "^4.1.1"
  }
}
